<div class="main-container">

  <div class="title-container-index">
    <h1 class="text-center my-4">Les ch√¢teaux</h1>
  </div>

  <div class="card-container-index my-5">
    <% @castles.each do |castle| %>
      <div class="card-product">
        <img style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path castle.photo.key, height: 300, width: 400, crop: :fill %>')">
          <div class="card-product-infos">
            <h2><%= castle.name.capitalize %></h2>
            <p><%= castle.description.capitalize %></p>
            <p><%= castle.price_per_day %> par jours.</p>
          </div>
        </div>
        <%= link_to "", castle_path(castle), class: "card-link", data: { turbolinks: false } %>
      <% end %>
  </div>
  <div>
    <div id="map"
       style="width: 40%; height: 600px; position: absolute; top: 220px; right: 20px; border-radius: 25px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
