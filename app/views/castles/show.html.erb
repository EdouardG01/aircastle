<div class="container">
  <h1 class="text-center mt-3"><%= @castle.name.capitalize %></h1>
  <div class="card-trip">
    <%= cl_image_tag @castle.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @castle.name.capitalize %></h2>
        <p><%= @castle.description %></p>
      </div>
      <h2 class="card-trip-pricing"><%= @castle.price_per_day %> €</h2>
    </div>
    <h2 class="mt-5 text-center">Réserver le Château</h2>
    <br>
    <%= render './reservations/new-reservation', castle: @castle, reservation: @reservation %>
  </div>
</div>

