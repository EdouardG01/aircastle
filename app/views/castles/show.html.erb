<div class="container">
  <h1 class="mt-4 mb-1 text-center">Réserver le Château</h1>
    <div class="card-trip">
          <h2 class="text-center mt-2 mb-2"><%= @castle.name.capitalize %></h2>
          <br>
          <div class="card-show">
            <%= cl_image_tag @castle.photo.key, height: 300, width: 400, crop: :fill %>
            <%= render './reservations/new-reservation', castle: @castle, reservation: @reservation %>
            </div>
          <br>
          <div class="card-trip-infos">
            <div>
              <p> <%= @castle.description %></p>
            </div>
            <h2 class="card-trip-pricing"><%= @castle.price_per_day %> € /Jour</h2>
          </div>
    </div>
</div>

