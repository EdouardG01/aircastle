<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('<%= image_path "background-castle.png" %>')">
  <div class="container">
    <h1>Peu importe l'évènement, amusez-vous en partageant une expérience rebondissante </h1>
    <%= link_to "Voir les châteaux", castles_path, class: "btn btn-outline-light rounded-pill btn-lg" %>
  </div>
</div>

<div class="cards mx-5">
  <% @castles.each do |castle| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path castle.photo.key, height: 300, width: 400, crop: :fill %>')">
      <h2><%= castle.name.capitalize %></h2>
      <%= link_to "", castle_path(castle), class: "card-link" %>
    </div>
  <% end %>
</div>


