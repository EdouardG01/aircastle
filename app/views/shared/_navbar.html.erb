<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex align-items-center">
    <div class="display-block mx-3">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "air-castle-logo-big.png" %>
        <% end %>
    </div>
    <%= link_to "Air Castles", root_path, :class => "logo-nav mt-2" %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <span class="mt-2"><%= render "shared/search" %></span>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Les châteaux", castles_path, class: "nav-link mr-3 text-danger" %>
        </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Mes réservations", reservations_path, class: "nav-link mr-3 text-dark" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mes châteaux", owner_castles_path, class: "nav-link mr-4 text-dark" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "avatar.jpg", class: "avatar dropdown-toggle avatar-size", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Deconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
